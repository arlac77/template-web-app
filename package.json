{
  "keywords": [
    "web"
  ],
  "template": {
    "inheritFrom": [
      "arlac77/template-npm",
      "arlac77/template-npm-pkgbuild",
      "arlac77/template-semantic-release",
      "arlac77/template-css"
    ],
    "usedBy": [
      "arlac77/npm-dep-graph",
      "arlac77/template-svelte-app"
    ],
    "properties": {
      "web-app": {
        "publish": "public/"
      }
    },
    "mergers": [
      {
        "type": "JSONMerger",
        "pattern": "**/*.webmanifest",
        "options": {
          "expand": false,
          "mergeHints": {
            "*": {
              "overwrite": false
            },
            "": {
              "orderBy": [
                "name",
                "short_name",
                "description",
                "lang",
                "start_url",
                "display",
                "orientation",
                "icons"
              ]
            }
          }
        }
      }
    ]
  }
}
